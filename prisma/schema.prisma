generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Incident {
  id          String   @id @default(cuid())
  disease     String
  latitude    Float
  longitude   Float
  details     String?
  createdAt   DateTime @default(now())
}

model Disease {
  id             String    @id @default(cuid())
  name           String    @unique
  overview       String    @db.Text
  symptoms       String[]
  causes         String    @db.Text
  prevention     String[]
  treatment      String    @db.Text
  slug           String    @unique
}
